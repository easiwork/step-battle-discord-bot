{
  "name": "step-battle-discord-bot",
  "version": "1.0.0",
  "description": "A Discord bot for tracking step battles between friends",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "build:prod": "NODE_ENV=production bun build src/index.ts --outfile dist/app --compile",
    "test": "bun test",
    "check-schedule": "bun run scripts/check-leaderboard-schedule.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop big-steppers-bot",
    "pm2:restart": "pm2 restart big-steppers-bot",
    "pm2:delete": "pm2 delete big-steppers-bot",
    "pm2:logs": "pm2 logs big-steppers-bot",
    "pm2:status": "pm2 status",
    "deploy": "bun run build:prod && pm2 restart big-steppers-bot"
  },
  "dependencies": {
    "croner": "9.1.0",
    "discord.js": "^14.14.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "bun-types": "latest"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "discord",
    "bot",
    "steps",
    "fitness",
    "battle"
  ],
  "author": "Step Battle Team",
  "license": "MIT"
}
